{% set mapLatitude = block.fLat %}
{% set mapLongitude = block.fLong %}
{% set mapZoom = block.fNumber %}
{% set mapLayer = block.fPlainTxt %}

<iframe 
    src="https://map.geo.admin.ch/#/embed?lang=de&center={{ mapLatitude }},{{ mapLongitude }}&z={{ mapZoom }}&bgLayer=ch.swisstopo.pixelkarte-farbe&layers={{ mapLayer}}"
    style="width: 100%; border: 0; min-height: 500px;"
    frameborder="0"
    scrolling="no"
    sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-presentation"
    allow="geolocation">
</iframe>