{% extends "_layouts/main" %}

{% block content %}

	{% set aufmacherBild = entry.img.one() %}
	{% set articleAuthor = entry.author %}
	{% set supCounter = 1 %}
	{# Start the superscript counter at 1 #}

	<a href="/">Home</a>
	<br>
	{% for catGenre in entry.fieldCatGenre %}
		{% if loop.first %}Genre:
		{% endif %}
		<a href="{{ catGenre.url }}">{{ catGenre.title }}</a>
	{% endfor %}
	<br>
	{% for catGenre in entry.fieldCatSubject %}
		{% if loop.first %}Thema:
		{% endif %}
		<a href="{{ catGenre.url }}">{{ catGenre.title }}</a>
	{% endfor %}

	<h1>{{ entry.title }}</h1>

	<p>{{ articleAuthor.fullName }}</p>

	<h3>{{ entry.plainText }}</h3>


	<img src="{{ aufmacherBild.url }}" width="300" alt="" title="{{ aufmacherBild.title }}">
	<br>
	<small>{{ aufmacherBild.imgSource }}</small>

	{% include "_components/matrixArticle" %}


	{{ entry.author }}

{% endblock %}
