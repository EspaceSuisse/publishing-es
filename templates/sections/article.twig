{% extends "_layouts/main" %}

{% block content %}
	<article class="gridArticle">
		{% set aufmacherBild = entry.fArticleImgI18n.one() %}

		{% for catItem in entry.fCatGenre %}
			{% if loop.first %}{{'Genre' | t}}:{% endif %}
			<a href="{{ catItem.url }}">{{ catItem.title }}</a>
		{% endfor %}
		<br>
		{% for catItem in entry.fCatSubject %}
			{% if loop.first %}{{ 'Thema' | t }}:{% endif %}
			<a href="{{ catItem.url }}">{{ catItem.title }}</a>
		{% endfor %}

		<h1>{{ entry.title }}</h1>

		<p>{{ entry.author }}</p>

		{# Lead Text #}
		<h3>{{ entry.fPlainTextI18n }}</h3>

		
		


		<img src="{{ aufmacherBild.url }}" width="300" alt="" title="{{ aufmacherBild.title }}">


		{% include "_components/matrixArticle" %}
	</article>
{% endblock %}
